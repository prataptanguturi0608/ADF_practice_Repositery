{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_testing_parquet1",
						"type": "DatasetReference"
					},
					"name": "table1"
				},
				{
					"dataset": {
						"referenceName": "ds_testing_parquet2",
						"type": "DatasetReference"
					},
					"name": "table2"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> table1",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> table2",
				"table1, table2 union(byName: true)~> union1"
			]
		}
	}
}